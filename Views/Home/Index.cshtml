@{
    ViewData["Title"] = "Home Page";
}
@model BHM_Meetup_Sept_2022_Polyglot.Controllers.MultiplicationValues

<div class="text-center">
    <h1 class="display-4">Simple Calculator</h1>
    <p>On submit it calls the go-multiplication service.</p>
    <form asp-controller="Home" asp-action="Multiply" method="post">
        <input type="number" step="any" placeholder="a" asp-for="a">X
        <input type="number" step="any" placeholder="b" asp-for="b">
        <input type="submit" value="=">
        <p style="display: inline-block; padding: 15px">@Model.answer</p>
    </form>
</div>
